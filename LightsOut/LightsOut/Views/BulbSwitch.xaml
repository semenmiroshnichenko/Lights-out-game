<UserControl x:Class="LightsOut.Views.BulbSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightsOut.Views"
             xmlns:converters="clr-namespace:LightsOut.Converters"
             mc:Ignorable="d" 
             x:Name="BolbSwitch"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToInvertedVisibilityConverter x:Key="BooleanToInvertedVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <TextBlock Text="On" Visibility="{Binding Path = Status, ElementName=BolbSwitch, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <TextBlock Text="Off" Visibility="{Binding Path = Status, ElementName=BolbSwitch, Converter={StaticResource BooleanToInvertedVisibilityConverter}}"/>
    </Grid>
</UserControl>
